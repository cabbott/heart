!!!
%html
  %head
    %title
      vBMetrics
    = stylesheet_link_tag 'bluetrip/css/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'bluetrip/css/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'bluetrip/css/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'start/jquery-ui-1.8.7.custom.css', :media => 'screen, projection'
    = stylesheet_link_tag "buttons.css", :media => :all
    = stylesheet_link_tag "heart.css", :media => :all

    = csrf_meta_tag
    = javascript_include_tag 'jquery-1.5.2.min.js'
    = javascript_include_tag 'jquery-ui-1.8.7.custom.min.js'
    = javascript_include_tag 'jquery.sparkline-1.6.min.js'
    = javascript_include_tag 'jquery.jeditable.min.js'
    = javascript_include_tag 'flot/jquery.flot.js'
    = javascript_include_tag 'flot/jquery.flot.symbols.js'
    = javascript_include_tag 'flot/jquery.flot.navigate.js'
    = javascript_include_tag 'flot/jquery.flot.stack.min.js'
    = javascript_include_tag 'flot/jquery.flot.growing.js'
    = javascript_include_tag 'flot/jquery.flot.fillbetween.js'
    = javascript_include_tag 'flot/jquery.flot.pie.js'
    = javascript_include_tag 'flot/jquery.flot.resize.js'
    = javascript_include_tag 'jquery.betterTooltip.js'
    = javascript_include_tag 'application.js'
    = javascript_include_tag 'heart.js'
    = javascript_include_tag 'json2.js'
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  %body.positive
    #menu_container
      #menu
        %ul.blue
          %li{}
            = link_to default_dashboards_path, :class => current_route?("dashboards#default") do
              %span
                = t(:all_metrics)
          %li{}
            = link_to dashboards_path, :class => current_route?("dashboards#index") do
              %span
                = t(:dashboards)
          %li{}
            = link_to segments_path, :class => current_route?("segments#index") do
              %span
                = t(:segments)
      #logout.span-4.push-10.quiet
        .span-4.last.right.fancy
          %span.light
            Metrics Updated:
          %br
          = Metric.where(:movingaverage => 0).order("fulldate DESC").first.try(:fulldate)
    #container.container.contrast
      .main-content
        = yield
        %br
        %br
      #footer.clear
        %p.center
          %a#lang_en{:href => "?lang=en"}<
            = image_tag "us.png"
          |
          %a#lang_ja{:href => "?lang=ja"}><
            = image_tag "jp.png"